  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\server\\src\\main.js",
      "envFile": "${workspaceFolder}\\server\\.env",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch React",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Angular",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    }
  ]
}